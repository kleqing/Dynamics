                                        file:bg-blue-50 file:text-blue-700
                                        hover:file:bg-blue-100
                                        focus:outline-none"
                                                       accept=".xlsx" />
                                            </div>

                                            <!-- Image Upload -->
                                            <div class="flex items-center space-x-4">
                                                <div class="relative flex-1 max-w-xs">
                                                    <input multiple
                                                            id="file-upload"
                                                            type="file"
                                                            name="images"
                                                            class="hidden"
                                                            accept="image/*" />
