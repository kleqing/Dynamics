@model Dynamics.Models.Models.ViewModel.OrganizationVM

@{
    ViewData["Title"] = "Detail";
    Layout = "_LayoutOrganization";
}
<!-- Tab Content Container -->
<div class="container mx-auto px-4 py-8">
    <!-- Gallery Header -->
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-2xl font-semibold text-gray-800">Organization Gallery</h2>
        <div class="flex gap-4">
            <button class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 flex items-center gap-2">
                <i data-lucide="upload" class="h-4 w-4"></i>
                Upload Photos
            </button>
            <div class="flex items-center gap-2 bg-white p-2 rounded-lg border">
                <i data-lucide="layout-grid" class="h-5 w-5 text-gray-500"></i>
                <select class="border-none outline-none text-gray-600">
                    <option>Grid View</option>
                    <option>List View</option>
                </select>
            </div>
        </div>
    </div>

    <!-- Image Categories -->
    <div class="flex gap-4 mb-6 overflow-x-auto pb-2">
        <button class="px-4 py-2 bg-blue-100 text-blue-600 rounded-full hover:bg-blue-200 whitespace-nowrap">
            All Photos
        </button>
        <button class="px-4 py-2 bg-white text-gray-600 rounded-full hover:bg-gray-100 whitespace-nowrap">
            Recent Events
        </button>
        <button class="px-4 py-2 bg-white text-gray-600 rounded-full hover:bg-gray-100 whitespace-nowrap">
            Project Photos
        </button>
        <button class="px-4 py-2 bg-white text-gray-600 rounded-full hover:bg-gray-100 whitespace-nowrap">
            Team Members
        </button>
        <button class="px-4 py-2 bg-white text-gray-600 rounded-full hover:bg-gray-100 whitespace-nowrap">
            Office Space
        </button>
    </div>

    <!-- Image Grid -->
    <div class="grid grid-cols-3 md:grid-cols-4 gap-4">

        @{
            string[] images = new string[1] { "," };
            if (@Model.OrganizationPictures != null)
            {
                images = Model.OrganizationPictures.TrimEnd(',', ' ').Split(",");
            }
        }

        @foreach (var img in images)
        {
            <!-- Image Cards -->
            <div class="group relative bg-white rounded-lg shadow-sm">
                <img src="@img" alt="Organization photo" class="w-full h-48">
                @* <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-40 transition-all duration-300"></div> *@
                <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300">
                    <div class="flex gap-2">
                        <button class="p-2 bg-white rounded-full hover:bg-gray-100">
                            <i data-lucide="eye" class="h-5 w-5 text-gray-700"></i>
                        </button>
                        <button class="p-2 bg-white rounded-full hover:bg-gray-100">
                            <i data-lucide="download" class="h-5 w-5 text-gray-700"></i>
                        </button>
                        <button class="p-2 bg-white rounded-full hover:bg-gray-100">
                            <i data-lucide="trash-2" class="h-5 w-5 text-red-600"></i>
                        </button>
                    </div>
                </div>
                <div class="p-3">
                    <h3 class="text-sm font-medium text-gray-800">Team Building Event</h3>
                    <p class="text-xs text-gray-500">Added Oct 15, 2024</p>
                </div>
            </div>
        }
       

        <!-- Repeat similar cards with different images -->
        <div class="group relative bg-white rounded-lg shadow-sm overflow-hidden">
            <img src="/api/placeholder/400/300" alt="Organization photo" class="w-full h-48 object-cover">
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-40 transition-all duration-300"></div>
            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300">
                <div class="flex gap-2">
                    <button class="p-2 bg-white rounded-full hover:bg-gray-100">
                        <i data-lucide="eye" class="h-5 w-5 text-gray-700"></i>
                    </button>
                    <button class="p-2 bg-white rounded-full hover:bg-gray-100">
                        <i data-lucide="download" class="h-5 w-5 text-gray-700"></i>
                    </button>
                    <button class="p-2 bg-white rounded-full hover:bg-gray-100">
                        <i data-lucide="trash-2" class="h-5 w-5 text-red-600"></i>
                    </button>
                </div>
            </div>
            <div class="p-3">
                <h3 class="text-sm font-medium text-gray-800">Office Space</h3>
                <p class="text-xs text-gray-500">Added Oct 10, 2024</p>
            </div>
        </div>

        <div class="group relative bg-white rounded-lg shadow-sm overflow-hidden">
            <img src="/api/placeholder/400/300" alt="Organization photo" class="w-full h-48 object-cover">
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-40 transition-all duration-300"></div>
            <div class="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-all duration-300">
                <div class="flex gap-2">
                    <button class="p-2 bg-white rounded-full hover:bg-gray-100">
                        <i data-lucide="eye" class="h-5 w-5 text-gray-700"></i>
                    </button>
                    <button class="p-2 bg-white rounded-full hover:bg-gray-100">
                        <i data-lucide="download" class="h-5 w-5 text-gray-700"></i>
                    </button>
                    <button class="p-2 bg-white rounded-full hover:bg-gray-100">
                        <i data-lucide="trash-2" class="h-5 w-5 text-red-600"></i>
                    </button>
                </div>
            </div>
            <div class="p-3">
                <h3 class="text-sm font-medium text-gray-800">Project Meeting</h3>
                <p class="text-xs text-gray-500">Added Oct 5, 2024</p>
            </div>
        </div>

        <!-- Add More Button -->
        <div class="flex items-center justify-center h-full min-h-[280px] bg-gray-50 rounded-lg border-2 border-dashed border-gray-300 hover:border-gray-400 transition-colors duration-300 cursor-pointer">
            <div class="text-center">
                <i data-lucide="plus-circle" class="h-8 w-8 mx-auto text-gray-400"></i>
                <p class="mt-2 text-sm font-medium text-gray-600">Add More Photos</p>
            </div>
        </div>
    </div>

    <!-- Load More Button -->
    <div class="text-center mt-8">
        <button class="px-6 py-2 border border-gray-300 rounded-lg text-gray-600 hover:bg-gray-50">
            Load More Photos
        </button>
    </div>
</div>